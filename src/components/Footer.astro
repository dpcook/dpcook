---
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: 'Google Scholar',
    href: 'https://scholar.google.ca/citations?user=aBCxvUIAAAAJ&hl=en',
    icon: 'scholar'
  },
  {
    name: 'GitHub',
    href: 'https://github.com/cook-lab',
    icon: 'github'
  },
  {
    name: 'Twitter',
    href: 'https://twitter.com/DavidPCook',
    icon: 'twitter'
  },
];
---

<footer class="border-t border-neutral-200 dark:border-neutral-800 mt-20">
  <div class="max-w-3xl mx-auto px-6 py-12">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="text-sm text-neutral-500 dark:text-neutral-400">
        &copy; {currentYear} David Cook
      </div>

      <div class="flex items-center gap-4">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-500 hover:text-orange-600 dark:text-neutral-400 dark:hover:text-orange-400 transition-colors"
            aria-label={link.name}
          >
            {link.icon === 'scholar' && (
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z" />
              </svg>
            )}
            {link.icon === 'github' && (
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
            )}
            {link.icon === 'twitter' && (
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
              </svg>
            )}
          </a>
        ))}
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-neutral-200 dark:border-neutral-800 text-center">
      <p class="text-sm text-neutral-400 dark:text-neutral-500">
        Scientist at <a href="https://www.ohri.ca" target="_blank" rel="noopener noreferrer" class="hover:text-orange-600 dark:hover:text-orange-400">Ottawa Hospital Research Institute</a>
        <span class="mx-2">&middot;</span>
        <a href="mailto:dacook@ohri.ca" class="hover:text-orange-600 dark:hover:text-orange-400">dacook@ohri.ca</a>
      </p>
    </div>
  </div>
</footer>
