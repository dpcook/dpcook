---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allNotes = await getCollection('notes', ({ data }) => {
  return data.draft !== true;
});

// Sort by date, newest first
const sortedNotes = allNotes.sort((a, b) =>
  b.data.date.getTime() - a.data.date.getTime()
);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout
  title="Notes - David Cook"
  description="Occasional thoughts on science, technology, and the research process."
>
  <section class="max-w-3xl mx-auto px-6 py-16">
    <header class="mb-12">
      <h1 class="text-4xl font-bold text-neutral-900 dark:text-white mb-4">
        Notes
      </h1>
      <p class="text-lg text-neutral-600 dark:text-neutral-400">
        Occasional thoughts on science, technology, and the research process.
      </p>
    </header>

    {sortedNotes.length === 0 ? (
      <div class="text-center py-12">
        <p class="text-neutral-500 dark:text-neutral-400">
          No notes yet. Check back soon.
        </p>
      </div>
    ) : (
      <div class="space-y-8">
        {sortedNotes.map((note) => (
          <article class="group">
            <a href={`/notes/${note.slug}`} class="block">
              <div class="flex flex-col md:flex-row md:items-baseline gap-2 md:gap-4 mb-2">
                <h2 class="text-xl font-semibold text-neutral-900 dark:text-white group-hover:text-orange-600 dark:group-hover:text-orange-400 transition-colors">
                  {note.data.title}
                </h2>
                <time class="text-sm text-neutral-500 dark:text-neutral-400 md:ml-auto flex-shrink-0">
                  {formatDate(note.data.date)}
                </time>
              </div>
              <p class="text-neutral-600 dark:text-neutral-400">
                {note.data.description}
              </p>
              {note.data.tags && note.data.tags.length > 0 && (
                <div class="mt-3 flex flex-wrap gap-2">
                  {note.data.tags.map((tag: string) => (
                    <span class="text-xs px-2 py-1 rounded-full bg-neutral-100 dark:bg-neutral-800 text-neutral-600 dark:text-neutral-400">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </a>
          </article>
        ))}
      </div>
    )}
  </section>
</BaseLayout>
